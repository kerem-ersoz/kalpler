{
  "name": "kalpler",
  "version": "1.0.0",
  "description": "Browser-based multiplayer Hearts card game",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch server/index.js",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "test:bots": "node server/test-bots.js",
    "test:bots:auto": "node server/test-bots.js --auto",
    "test:bots:fast": "node server/test-bots.js --auto --fast"
  },
  "keywords": ["hearts", "card-game", "multiplayer", "socket.io"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
